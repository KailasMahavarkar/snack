{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**"
      ]
    },
    "snack-modules-packager#build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**"
      ],
      "env": [
        "APP_VERSION" // see: ./snackager/Dockerfile#L52
      ]
    }
  }
}
