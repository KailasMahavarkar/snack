{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "allowJs": true,
    "jsx": "react",
    "lib": ["webworker", "dom", "esnext", "scripthost"],
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
  },
  "ts-node": {
    "transpileOnly": true
  }
}
